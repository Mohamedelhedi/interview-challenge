FROM node:20-alpine
WORKDIR /app

# Copy package files
COPY backend/package*.json ./

# First, try npm ci. If it fails, use npm install as fallback
RUN npm ci || npm install

# Copy backend source code
COPY backend/ .

# Build the NestJS application
RUN npm run build

# Show what was built
RUN find dist/ -name "*.js" -type f

# Expose the port
EXPOSE 8080

# Start the application
CMD ["node", "dist/main.js"]